<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarSize">@dimen/action_bar_size</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryBlue2</item>
        <item name="drawerArrowStyle">@style/DrawerHamburgerStyle</item>

        <item name="android:actionOverflowButtonStyle">@style/AppTheme.OverFlow</item>
    </style>

    <style name="DrawerHamburgerStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="thickness">3dp</item>
        <item name="color">@color/colorPrimaryBlue</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
    </style>

    <style name="AppTheme.OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorPrimaryBlue</item>
        <item name="android:src">@drawable/ic_sort_black_26_34dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />



    <style name="BlackNoBarsTheme" parent="android:Theme.Black.NoTitleBar.Fullscreen"/>
    <style name="BlackNoTitleBarTheme" parent="android:Theme.Black.NoTitleBar"/>

    <style name="TitleBarTextAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily"
            tools:targetApi="jelly_bean">@font/seoul_namsan_m</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MenuItemTextAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily"
            tools:targetApi="jelly_bean">@font/seoul_namsan_l</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorGrayDark</item>
    </style>

